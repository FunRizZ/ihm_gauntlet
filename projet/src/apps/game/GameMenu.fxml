<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="apps.controller.GameMenuController">
    <center>
        <VBox alignment="CENTER" spacing="10" scaleX="2" scaleY="2">
            <Button text="New Game" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
            <Button text="Load Game" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
            <Button text="Map Creator" onAction="#changeCreatorMenu" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
            <Button text="Scoreboard" onAction="#changeScoreboardMenu" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
            <Button text="Settings" onAction="#changeSetting" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
            <Button text="Credits" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
            <Button text="Quit to Desktop" onAction="#handleQuit" prefWidth="150" style="-fx-border-color: black; -fx-border-width: 2;"/>
        </VBox>
    </center>

</fx:root>

